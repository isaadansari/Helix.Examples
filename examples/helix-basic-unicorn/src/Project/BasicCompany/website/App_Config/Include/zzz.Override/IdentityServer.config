<?xml version="1.0" encoding="utf-8"?>
<!--
Purpose: Sets the identity server to local CPA instance
-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <sc.variable name="identityServerAuthority">
      <patch:attribute name="value">https://identity.helixexamples.local</patch:attribute>
    </sc.variable>
    <settings>
      <setting name="FederatedAuthentication.IdentityServer.RequireHttpsMetadata">
        <patch:attribute name="value">true</patch:attribute>
      </setting>
    </settings>
  </sitecore>
</configuration>
